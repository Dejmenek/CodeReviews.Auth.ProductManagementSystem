@page
@model ProductManagementSystem.Web.Pages.Staff.UpdateModel
@{
    ViewData["Title"] = "Update User";
}

<h2>Update User</h2>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="UserUpdateViewModel.Id" />

    <div class="form-group">
        <label asp-for="UserUpdateViewModel.UserName"></label>
        <input asp-for="UserUpdateViewModel.UserName" class="form-control" />
        <span asp-validation-for="UserUpdateViewModel.UserName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="UserUpdateViewModel.Email"></label>
        <input asp-for="UserUpdateViewModel.Email" class="form-control" />
        <span asp-validation-for="UserUpdateViewModel.Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="UserUpdateViewModel.PhoneNumber"></label>
        <input asp-for="UserUpdateViewModel.PhoneNumber" class="form-control" />
        <span asp-validation-for="UserUpdateViewModel.PhoneNumber" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
