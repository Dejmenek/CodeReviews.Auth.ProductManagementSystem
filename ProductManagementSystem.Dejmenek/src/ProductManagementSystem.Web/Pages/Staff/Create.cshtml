@page
@model ProductManagementSystem.Web.Pages.Staff.CreateModel
@{
    ViewData["Title"] = "Create User";
}

<h2>Create User</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="UserCreateViewModel.UserName"></label>
        <input asp-for="UserCreateViewModel.UserName" class="form-control" />
        <span asp-validation-for="UserCreateViewModel.UserName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="UserCreateViewModel.PhoneNumber"></label>
        <input asp-for="UserCreateViewModel.PhoneNumber" class="form-control" />
        <span asp-validation-for="UserCreateViewModel.PhoneNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="UserCreateViewModel.Email"></label>
        <input asp-for="UserCreateViewModel.Email" class="form-control" />
        <span asp-validation-for="UserCreateViewModel.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="UserCreateViewModel.Password"></label>
        <input asp-for="UserCreateViewModel.Password" class="form-control" />
        <span asp-validation-for="UserCreateViewModel.Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="UserCreateViewModel.ConfirmPassword"></label>
        <input asp-for="UserCreateViewModel.ConfirmPassword" class="form-control" />
        <span asp-validation-for="UserCreateViewModel.ConfirmPassword" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
