@page
@using ProductManagementSystem.Shared
@model ProductManagementSystem.Web.Pages.Staff.StaffModel
@{
    ViewData["Title"] = "Staff";
}

<div class="table-controls">
    <div class="table-controls-left">
        <a class="table-action-btn add-btn text-decoration-none" asp-page="./Create">Add User</a>
        <button class="table-action-btn delete-btn"
        aria-label="Delete selected items"
        onclick="submitBulkDelete()">
            <i class="bi bi-trash"></i>
            <span>Delete Selected</span>
        </button>
    </div>
    <form method="get" id="tableControlsForm">
        <div class="table-controls-right">
            <div class="page-size-container">
                <select class="form-select"
                asp-for="@Model.Filter.PageSize"
                onchange="document.getElementById('tableControlsForm').submit();"
                aria-label="Select page size">
                    @foreach (var size in Enum.GetValues(typeof(PageSize)).Cast<PageSize>())
                    {
                        <option value="@size" selected="@(Model.Filter.PageSize == size ? "selected" : null)">
                            @((int)size)
                        </option>
                    }
                </select>
            </div>
            <div class="search-container">
                <input asp-for="@Model.Filter.Search" type="search" class="table-search" placeholder="Search" aria-label="Search table" />
            </div>
        </div>
        <input type="hidden" asp-for="@Model.Filter.PageNumber" value="1" />
    </form>
</div>

<table class="generic-table my-3">
    <thead>
        <tr>
            <th>
                <input type="checkbox"
                class="form-check-input select-all-checkbox"
                aria-label="Select all rows"
                onclick="toggleAll(this.checked)" />
            </th>
            <th>
                <div class="d-flex align-items-center">
                    <p class="m-0">UserName</p>
                </div>
            </th>
            <th>
                <div class="d-flex align-items-center">
                    <p class="m-0">Email</p>
                </div>
            </th>
            <th>Email Confirmed</th>
            <th>
                <div class="d-flex align-items-center gap-2">
                    <p class="m-0">Phone Number</p>
                </div>
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.PagedUsers.Items)
        {
            <tr>
                <td>
                    @if (!user.Roles.Contains("Admin"))
                    {
                        <input type="checkbox"
                               class="form-check-input row-checkbox"
                               aria-label="Select row"
                               value="@user.Id" />
                    }
                </td>
                <td>
                    @user.UserName
                </td>
                <td>
                    @user.Email
                </td>
                <td>
                    @if (user.EmailConfirmed)
                    {
                        <span class="badge rounded-pill bg-success">Confirmed</span>
                    }
                    else
                    {
                        <span class="badge rounded-pill bg-warning text-dark">Unconfirmed</span>
                    }
                </td>
                <td>
                    @(user.PhoneNumber ?? "")
                </td>
                <td>
                    <div class="action-buttons">
                        <a asp-page="./Details" asp-route-userId="@user.Id" title="Details" class="action-icon view" aria-label="View details">
                            <i class="bi bi-eye"></i>
                        </a>
                        @if (!user.Roles.Contains("Admin"))
                        {
                            <a asp-page="./Update" asp-route-userId="@user.Id" title="Edit" class="action-icon edit" title="Edit User" aria-label="Edit item">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <form method="post" class="d-inline" asp-page-handler="DeleteSingle" asp-route-id="@user.Id">
                                <input type="hidden" name="Filter.PageSize" value="@Model.Filter.PageSize" />
                                <input type="hidden" name="Filter.Search" value="@Model.Filter.Search" />
                                <button type="submit" class="btn btn-sm btn-danger" aria-label="Delete item">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </form>
                        }
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<form method="post" asp-page-handler="DeleteSelected" id="bulkDeleteForm">
</form>

@{
    int maxDisplayedPages = 5;
    int startPage = Math.Max(1, Model.PagedUsers.CurrentPage - 2);
    int endPage = Math.Min(Model.PagedUsers.TotalPages, startPage + maxDisplayedPages - 1);

    if (endPage - startPage < maxDisplayedPages - 1)
    {
        startPage = Math.Max(1, endPage - maxDisplayedPages + 1);
    }
}

<div class="d-flex justify-content-between align-items-center">
    <span>
        Showing @((Model.PagedUsers.TotalCount == 0) ? 0 : ((Model.PagedUsers.CurrentPage - 1) * (int)Model.PagedUsers.PageSize + 1))
        to @(Math.Min(Model.PagedUsers.CurrentPage * (int)Model.PagedUsers.PageSize, Model.PagedUsers.TotalCount))
        of @Model.PagedUsers.TotalCount entries
    </span>
    <nav>
        <ul class="pagination">
            @if (Model.PagedUsers.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link"
                       asp-route-Filter.PageNumber="@(Model.PagedUsers.CurrentPage - 1)"
                       asp-route-Filter.Search="@(Model.Filter.Search)"
                       asp-route-Filter.PageSize="@Model.PagedUsers.PageSize"
                       aria-label="Go to previous page">
                        <i aria-hidden="true" class="bi bi-chevron-left"></i>
                    </a>
                </li>
            }
            @if (startPage > 1)
            {
                <li class="page-item">
                    <a class="page-link"
                       asp-route-Filter.PageNumber="1"
                       asp-route-Filter.Search="@(Model.Filter.Search)"
                       asp-route-Filter.PageSize="@Model.PagedUsers.PageSize"
                       aria-label="Go to page 1">
                        1
                    </a>
                </li>
                @if (startPage > 2)
                {
                    <li class="page-item disabled">
                        <span class="page-link" aria-hidden="true">...</span>
                    </li>
                }
            }

            @for (int i = startPage; i <= endPage; i++)
            {
                <li class="page-item @(i == Model.PagedUsers.CurrentPage ? "active" : "")">
                    <a class="page-link"
                       asp-route-Filter.PageNumber="@i"
                       asp-route-Filter.Search="@(Model.Filter.Search)"
                       asp-route-Filter.PageSize="@Model.PagedUsers.PageSize"
                       aria-label="Go to page @i">
                        @i
                    </a>
                </li>
            }

            @if (endPage < Model.PagedUsers.TotalPages)
            {
                if (endPage < Model.PagedUsers.TotalPages - 1)
                {
                    <li class="page-item disabled">
                        <span class="page-link" aria-hidden="true">...</span>
                    </li>
                }
                <li class="page-item">
                    <a class="page-link"
                       asp-route-Filter.PageNumber="@Model.PagedUsers.TotalPages"
                       asp-route-Filter.Search="@(Model.Filter.Search)"
                       asp-route-Filter.PageSize="@Model.PagedUsers.PageSize"
                       aria-label="Go to last page">@Model.PagedUsers.TotalPages</a>
                </li>
            }
            @if (Model.PagedUsers.CurrentPage < Model.PagedUsers.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link"
                       asp-route-Filter.PageNumber="@(Model.PagedUsers.CurrentPage + 1)"
                       asp-route-Filter.Search="@(Model.Filter.Search)"
                       asp-route-Filter.PageSize="@Model.PagedUsers.PageSize"
                       aria-label="Go to next page">
                        <i aria-hidden="true" class="bi bi-chevron-right"></i>
                    </a>
                </li>
            }
        </ul>
    </nav>
</div>